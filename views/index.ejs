<%- include('./partials/header.ejs') %>
<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="container">
    <h1 class="menu-perguntas">Perguntas</h1>
    <a href="/perguntar" class="btn btn-success">Perguntar</a>
    <% perguntas.forEach(pergunta => { %>

        <div class="card card-content">
          <div class="card-body">
            <h3><%= pergunta.titulo %></h3>
          </div>
          <div class="card-footer">
            <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-success">Responder</button></a> 
          </div>
        </div>

   <% }) %>
  </div>
  
</body>
<%- include('./partials/footer.ejs') %>